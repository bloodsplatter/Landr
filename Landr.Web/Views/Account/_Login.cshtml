<form asp-controller="Account" asp-action="Login" method="post" class="form-inline my-2 my-lg-0">
    <input type="email" class="form-control mr-sm-2" name="email" placeholder="Enter email" />
    <input type="password" class="form-control mr-sm-2" name="password" />
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
</form>

<a class="btn btn-outline-secondary mx-2" asp-action="Register" asp-controller="Account">Register</a>